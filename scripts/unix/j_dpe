#!/usr/bin/env bash
# author Vardan Gyurjyan
# date 2.7.15

if [ -n "$CLARA_HOME" ]; then
    export CLASSPATH="$CLARA_HOME/lib/*:$CLAS12DIR/lib/*:$CLAS12DIR/services/*"
    else
    echo "CLARA_HOME is not defined. Exiting..."
    exit
fi

echo ================================
echo $CLARA_HOME
echo $CLAS12DIR
echo $CLASSPATH
echo ================================

$JAVA_HOME/bin/java -Xms1024m -Xmx2048m -XX:+UseNUMA -XX:+UseBiasedLocking org.jlab.clara.sys.Dpe "$@"